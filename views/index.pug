//- General navbar 
include includes/layout

block content
  //- Greeting
  h4(style="margin-left:10px; margin-top:30px;") Welcome to #{title}

  //- Cards for beginner/advanced nav links
  .container(style="margin-top:30px;")
    p Archery Tutor is here to assist with the basics of bow setup to the more intricate nuances of shot form and everything in between.
    .row(class="col-md-8 offset-md-2")
      .col(class="col-md-4")
        .card(class="h-100")
          .col(class="card-top" style="margin-top: 5px; margin-left:10px;")
            h5 The Basics 
          .col(class="card-body") 
            ul 
              li 
                a(href="setup/setup") Bow Setup
              li 
                a(href="shotprocess/shotsteps") 11 Steps for Shooting
              li 
                a(href="shotprocess/basicform") Form Basics
              li 
                a(href="training/training") Training 
      .col(class="col-md-4")
        .card(class="h-100")
          .col(class="card-top" style="margin-top: 5px; margin-left:10px;")
            h5 Advanced Topics 
          .col(class="card-body") 
            ul 
              li 
                a(href="tuning/tuning") Tuning
              li 
                a(href="shotprocess/advancedform") Advanced Form


